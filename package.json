{
  "name": "@module-federation/rollup-federation",
  "version": "0.0.0",
  "description": "Multiple separate builds should form a single application.",
  "keywords": [
    "rollup",
    "plugin",
    "module",
    "modules",
    "federation"
  ],
  "homepage": "https://github.com/module-federation/rollup-federation",
  "bugs": "https://github.com/module-federation/rollup-federation/issues",
  "repository": "module-federation/rollup-federation",
  "license": "MIT",
  "author": "Jacob Ebey",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "format": "prettier --write \"{*,README,src/*}+.+(js|md)\"",
    "build": "rollup -c",
    "watch": "rollup -c -w",
    "release": "yarn build && yarn changeset publish"
  },
  "prettier": {
    "bracketSpacing": true,
    "printWidth": 80,
    "proseWrap": "always",
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "all",
    "useTabs": true
  },
  "dependencies": {
    "@rollup/plugin-virtual": "^2.0.0",
    "estree-walker": "^1.0.1",
    "magic-string": "^0.25.7"
  },
  "devDependencies": {
    "@changesets/cli": "^2.9.1",
    "@rollup/plugin-node-resolve": "^7.0.0",
    "prettier": "^2.0.5",
    "rollup": "^2.0.0"
  },
  "peerDependencies": {
    "rollup": "^1.20.0||^2.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "volta": {
    "node": "12.18.1",
    "yarn": "1.22.4"
  }
}
